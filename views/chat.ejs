<script>
function slideanim(){
     $(".slideanim").each(function(){
             var pos = $(this).offset().top;
             var winTop = $(window).scrollTop();
             if (pos < winTop + 600) {
               //$("this").addClass("rotate");
               $(this).addClass("slide");
               
             }
         });    
   }
