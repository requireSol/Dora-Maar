<script>
$("#start-loader").click(function() {
    $("#loader-gif").show();
    setTimeout(function() {
      $("#loader-gif").hide();
    }, 5000);
  });
</script>

<!-- Container (Navbar Section) -->
<div id="navbar" style="background-color:white; color:black" class="container-fluid">
    <nav>
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-2">
                <h2 id="title" style="float:left;"><%= title %></h2>
            </div>
            <ul id="navul" style="float:right; margin-right:150px;" >
                <li><a id="id1" class="select" href="#main" onclick="main()">About</a></li>
                <li><a id="id2" class="select" href="#chat" onclick="chat()">Chat</a></li>
                <li><a id="id3" class="select" href="#contact" onclick="contact()">Contact</a></li>
