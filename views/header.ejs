                <li><div class="select" onclick="changeStyle()"  id="changeStyle"><span class="glyphicon glyphicon-adjust"></span></div></li>
            </ul>
            <div class="dropdown" style="float:right;">
                <span onclick="dropDownToogle()" class="dropbtn glyphicon glyphicon-menu-hamburger" style="color:black"></span>
                <div id="myDropdown" class="dropdown-content">
                    <a id="id4"class="select2" href="#main" onclick="main()">About</a>
                    <a id="id5"class="select2" href="#chat" onclick="chat()">Chat</a>
                    <a id="id6"class="select2" href="#contact" onclick="contact()">Contact</a>
                    <!--<div class="select2 active" href="#about">LogIn</div>-->
                    <div class="select2" onclick="changeStyle()"><span class="glyphicon glyphicon-adjust"></span></div>
